<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/list_item_single_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/item_list_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/item_list_tag_selector"
            android:padding="12dp" />

        <TextView
            android:id="@+id/item_list_song_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="start"
            android:maxLines="1"
            android:text="Song Title"
            android:textColor="@drawable/item_list_song_name_selector"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/item_list_collected_all_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/list_icon_collect_1"
            android:padding="12dp" />
    </LinearLayout>


    <SeekBar
        android:id="@+id/item_list_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_single_layout"
        android:max="1000"
        android:progress="0"
        android:progressDrawable="@drawable/list_item_progressbar_drawable_selector" />
</RelativeLayout>
