        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <com.example.rhong.musictest.view.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/id3_circle_area" />

            <ImageView
                android:id="@+id/iv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/id3_progressbar_area1" />

            <com.example.rhong.musictest.view.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/id3_artwork_area1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/id3_artwork_area2" />

            <com.example.rhong.musictest.view.CircleImageView
                android:id="@+id/iv_background_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/id3_artwork" />

            <com.example.rhong.musictest.view.CircleSeekBar
                android:id="@+id/circle_seekbar"
                android:layout_width="460dp"
                android:layout_height="460dp"
                android:layout_centerInParent="true"

                android:thumb="@drawable/thumb"
                app:progress_max="1000" />


            <com.example.rhong.musictest.view.CircleImageView
                android:id="@+id/id3_play_or_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_play_or_pause_selector" />


            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id3_play_or_pause"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="00:00"
                android:textColor="#282828"
                android:textSize="22sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/id3_button_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/id3_button_n"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/id3_icon_repeat_n" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/id3_button_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/id3_button_n"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/id3_icon_prev_n" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/id3_button_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/id3_button_n"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/id3_icon_next_n" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/id3_button_shuffle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/id3_button_n"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/id3_icon_shuffle_on_n" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
